package java_array;

import java.util.Arrays;

public class C121 {
	public static void main(String[] args) {
		int[] arr = {10, 20,30,400, 500, 110, 540};
		System.out.println(Arrays.toString(arr));
		for(int i=arr.length -1; i>1;i--) {
			arr[i] = Math.abs(arr[i+1] + arr[i+2]);
		}
		System.out.println(Arrays.toString(arr));
	}
}
