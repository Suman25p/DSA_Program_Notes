package java_array;

public class C91 {
	public static void main(String[] args) {
		int[] arr = {10,21,30,41};
		int oddTotal = 0;
		int oddSum = 0;
		for(int i=0; i<arr.length; i++) {
			if(arr[i] % 2 != 0) {
			oddTotal ++;
			oddSum += arr[i];
		}
	}
	double avg = (double) oddSum / oddTotal;
	System.out.println(avg);
	
}
