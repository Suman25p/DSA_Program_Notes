package java_array;

public class C90 {
	public static void main(String[] args) {
		int[] arr = {2,4,6,8};
		int evenTotal = 0;
		int evenSum = 0;
		for(int i=0; i< arr.length; i++) {
			if(arr[i] % 2 == 0) {
				evenTotal ++;
				evenSum += arr[i];
			}
		}
		double avg = (double) evenSum / evenTotal;
		System.out.println(avg);
	}
}
