package topic1;

public class Q41 {
	public static void main(String[] args) {
		
		int arr[] = {2, 3, 5, 1, 4, 6, 8, 2};
		
		System.out.println("Index where three consecutive elements are increasing:");
		
		for(int i=0; i<arr.length-2; i++) {
			if(arr[i]<arr[i+1] && arr[i+1]< arr[i+2]) {
				System.out.print( i+ " ");
			}
		}
		
//		for (int i=0; i<arr.length-2; i++) {
